{
  "name": "jwksmith",
  "version": "1.0.2",
  "private": true,
  "description": "Tiny sidecar/microservice that exposes /.well-known/jwks.json from a mounted PKCS#12 (.p12) certificate.",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --watch src --ext js,mjs,json src/index.js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jose": "^5.8.0",
    "node-forge": "^1.3.1",
    "pino": "^9.3.2",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "semantic-release": "^23.1.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/npm": "^12.0.1"
  }
}
